//-----------------------------------------------------------------------------------
// GLOBAL VARIABLE
//-----------------------------------------------------------------------------------

int motValue = 0;

//-----------------------------------------------------------------------------------
// BASIC FUNCTIONS
//-----------------------------------------------------------------------------------

void initMOT() {
  motValue = 0;
  pinMode(MOT_PIN, OUTPUT);
  updateMOT();
}

void updateMOT() {
  analogWrite(MOT_PIN, motValue);
}

bool changeMOT(int16_t v) {
  motValue = v & 1023;
}

//-----------------------------------------------------------------------------------
// DATAGRAM FUNCTIONS
//-----------------------------------------------------------------------------------

void setMOT(uint16_t addr) {
  changeMOT(_DIN[addr] << 8 | _DIN[addr+1]);
}
