//-----------------------------------------------------------------------------------
// GLOBAL VARIABLE
//-----------------------------------------------------------------------------------

int buzValue = 0;

//-----------------------------------------------------------------------------------
// BASIC FUNCTIONS
//-----------------------------------------------------------------------------------

void initBUZ() {
  buzValue = 0;
  pinMode(BUZ_PIN, OUTPUT);
  updateMOT();
}

void updateBUZ() {
  tone(BUZ_PIN, motValue);
  noTone(BUZ_PIN);
}

bool changeBUZ(int16_t v) {
  motValue = v;
}

//-----------------------------------------------------------------------------------
// DATAGRAM FUNCTIONS
//-----------------------------------------------------------------------------------

void setBUZ(uint16_t addr) {
  changeMOT(_DIN[addr] << 8 | _DIN[addr+1]);
}

